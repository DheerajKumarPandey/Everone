<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim_10"
    android:paddingRight="@dimen/dim_10"
    tools:context="com.everone.LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:id="@+id/img_logo"
        android:layout_marginTop="@dimen/dim_40"
        />
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@null"
    android:src="@drawable/logo_name"
    android:layout_marginTop="@dimen/dim_10"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_50"
        android:text="Sign In or Register"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_7"
        android:text="We need your number to get things done"
        android:textColor="#8A8787"
        android:textSize="@dimen/dim_18"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_45"
        android:padding="@dimen/dim_5"
        android:background="@drawable/mobile_bg">

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

            <EditText
                android:id="@+id/edt_customer_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ccp"
                android:inputType="phone"
                android:maxLength="12"
                android:maxLines="1"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="#8A8787" />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_63"
        android:background="@drawable/red_button"
        android:text="Verify Number"
        android:id="@+id/btn_verify_number"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_18"
        />
</LinearLayout>
